{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Stop Procrastinate",
    "description": "Chrome extension - sTaissa",
    "author": "Taissa Caroline da Silva",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "declarativeContent"
    ],
    "background": {
        "service.worker": ["background.js"]
    },
    "content_scripts": [ {
        "js": ["jquery.js", "index.js"],
        "matches": ["*://www.facebook.com/*"]
    } ]
}